# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration (MySQL)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=

# JWT Authentication Configuration
JWT_SECRET=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Email Configuration (for sending invoices via Nodemailer)
# SMTP settings for email service (Gmail, SendGrid, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@ecommerce.com
EMAIL_FROM_NAME=Ecommerce Store

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/ogg

# AWS S3 Configuration (for product media storage)
# Set USE_AWS_S3=true to store media in S3 (false uses local /uploads)
USE_AWS_S3=false

# AWS region where the bucket lives (e.g., us-east-1, eu-west-1)
AWS_REGION=us-east-1

# IAM user credentials (programmatic access) with permissions to put/get/delete objects
# Obtain these from AWS IAM > Users > Security credentials (Access keys)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 bucket name (must be globally unique, e.g., my-shop-media-123)
AWS_S3_BUCKET_NAME=

# Optional: Public base URL. If blank, code builds URL as
# https://<bucket>.s3.<region>.amazonaws.com/<key>
# If you front with CloudFront/CDN, set the CDN domain (e.g., https://cdn.myshop.com)
AWS_S3_BUCKET_URL=
